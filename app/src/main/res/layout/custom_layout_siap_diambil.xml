<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="342dp"
    android:layout_height="130dp"
    app:cardBackgroundColor="#00000000"
    android:layout_marginBottom="10dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:background="@drawable/stroke_outline_petugas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginStart="23dp"
            android:layout_marginTop="14dp"
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama \t:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        
        <TextView
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/txtNama"
            android:id="@+id/tvNama"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raynaldi Zulfikar"
            
            />

        <TextView
            android:layout_marginStart="23dp"
            android:id="@+id/txtRtRw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rt/Rw \t:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@id/txtNama"
            android:layout_marginTop="5dp"
            />
        
        <TextView
            android:id="@+id/tvRtRw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/02"
            android:layout_toRightOf="@id/txtRtRw"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@id/tvNama"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            
            />
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProses"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Proses"
            android:textColor="@color/white"
            android:backgroundTint="#009343"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="14dp"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
