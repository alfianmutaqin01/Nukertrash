<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="342dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00000000"
    android:layout_marginBottom="15dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:background="@drawable/stroke_outline"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvTitle"
            android:lineSpacingExtra="3dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raynaldi Zulfikar"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penarikan Bank BRI Rp. 15.000"
            android:layout_below="@+id/tvTitle"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            />


        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N. Rek : 1234567890"
            android:layout_below="@+id/tvDate"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"

            />


        <EditText
            android:id="@+id/etNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:layout_below="@+id/tvStatus"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:hint="Masukan Biaya Admin"
            android:textSize="12sp"
            android:padding="6dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Simpan"
            android:backgroundTint="#009343"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_below="@id/tvStatus"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catatan : Tidak ada"
            android:layout_below="@+id/etNominal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"


            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>
