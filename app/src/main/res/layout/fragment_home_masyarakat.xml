<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.masyarakat.home.HomeMasyarakatFragment">

    <RelativeLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivLogo"
            android:text="Halo, Fitri!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginTop="5dp"
            android:text="Hari ini mau menukar sampah apa?"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"


            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:background="@drawable/custom_borders_masyarakat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <LinearLayout
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 100.000"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTarikSaldo"
                app:cornerRadius="25dp"
                android:layout_width="189dp"
                android:layout_height="40dp"
                android:text="Tarik Saldo"
                android:textColor="#009343"
                android:backgroundTint="@color/white"
                android:layout_marginTop="12dp"

                />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/ellipse_151"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:background="@drawable/custom_border_menu_admin"
                android:padding="9dp">

                <TextView
                    android:id="@+id/tvMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tvMenu"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/ivJadwalPengambilanSampah"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/jadwal"

                            />

                        <TextView
                            android:layout_below="@id/ivJadwalPengambilanSampah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jadwal"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"

                            />

                    </RelativeLayout>

                    <Space
                        android:layout_width="18dp"
                        android:layout_height="match_parent" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/ivJualSampah"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/jual"

                            />

                        <TextView
                            android:textAlignment="center"
                            android:layout_below="@id/ivJualSampah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jual Sampah"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"

                            />

                    </RelativeLayout>

                    <Space
                        android:layout_width="18dp"
                        android:layout_height="match_parent" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/ivRiwayat"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/riwayat"

                            />

                        <TextView
                            android:layout_below="@id/ivRiwayat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Riwayat"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"

                            />

                    </RelativeLayout>

                    <Space
                        android:layout_width="18dp"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivKeteranganSampah"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/keterangan"
                            android:layout_centerHorizontal="true"
                            />

                        <TextView
                            android:textAlignment="center"
                            android:layout_below="@id/ivKeteranganSampah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keterangan Sampah"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"

                            />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artikel"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

                <TextView
                    android:id="@+id/tvLihatSemua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:gravity="end"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:id="@+id/rvArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/custom_layout_artikel"
                />


        </LinearLayout>
    </FrameLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:text="Butuh bantuan?"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textColor="#009343"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
