<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.admin.home.HomeAdminFragment">

    <RelativeLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivLogo"
            android:text="Halo, Fitri!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="#009343"
            app:cardCornerRadius="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="11dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Saldo"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSaldo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Rp.20.000.000"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="#009343"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="11dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Petugas"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/tvPetugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="15"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="#009343"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="11dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengguna"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/tvPengguna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="500"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="375dp"
        android:background="@drawable/custom_borders_admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <RelativeLayout
            android:id="@+id/ellipse_151"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_border_menu_admin"
            android:padding="9dp">

            <TextView
                android:id="@+id/tvMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_alignParentStart="true"
                android:id="@+id/btnKonfirmasiTransaksi"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"
                android:layout_below="@id/tvMenu"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/konfirmasi_transaksi"

                />

            <TextView
                android:id="@+id/tvKonfirmasiTransaksi"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Transaksi"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@id/btnKonfirmasiTransaksi"
                android:layout_marginStart="40dp"

                />

            <ImageView
                android:id="@+id/btnTambahArtikel"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/tambah_artikel"
                android:layout_below="@id/tvKonfirmasiTransaksi"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"


                />

            <TextView
                android:layout_width="70dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Tambah Artikel"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_below="@id/btnTambahArtikel"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"

                />

            <ImageView
                android:id="@+id/btnRiwayat"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/riwayat"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_below="@id/tvMenu"
                android:layout_marginTop="15dp"
                />


            <TextView
                android:id="@+id/tvRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="53dp"
                android:layout_below="@id/btnRiwayat"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/btnSembako"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/sembako"
                android:layout_below="@id/tvRiwayat"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="30dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sembako"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@id/btnSembako"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="5dp"


                />


        </RelativeLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
